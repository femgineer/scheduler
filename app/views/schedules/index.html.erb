<h1>All Schedules</h1>
 
<table>
  <tr>
    <th>Name</th>    
	<th>Status</th>    
  </tr>
 
  <% @schedules.each do |schedule| %>
    <tr>
      <td><%= schedule.name %></td>
	  <td><%= schedule.status %></td>
	  <td><%= link_to 'Show', schedule_path(schedule) %></td>

	  <% if schedule.status == 'draft'%>
		  <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>		  
		  <td><%= link_to 'Destroy', schedule_path(schedule),
		                      method: :delete, data: { confirm: 'Are you sure?'} %></td>
	  <% end %>	  
    </tr>
  <% end %>
</table>