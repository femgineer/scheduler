<h1>Edit Schedule: <%= @schedule.name%></h1>

 
<%= form_for :schedule, url: schedule_path(@schedule), method: :patch do |f| %>
  <% if @schedule.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited
      this schedule from being saved:</h2>
    <ul>
    <% @schedule.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :note %><br>
    <%= f.text_area :note %>
  </p>
    
  <p>
	  
  <label for="start_date">Start Date</label>		
  <input type="text" data-behaviour='datepicker' name="start_date" id="start_date" value="<%= @start_date_str%>">

  <script type="text/javascript">
    $(document).ready(function(){
      $('[data-behaviour~=datepicker]').datepicker();
    })
  </script>  
  </p>
  <p>
  <label for="end_date">End Date</label>		
  <input type="text" data-behaviour='datepicker' name="end_date" id="end_date" value="<%= @end_date_str%>">

  <script type="text/javascript">
    $(document).ready(function(){
      $('[data-behaviour~=datepicker]').datepicker();
    })
  </script>  
  </p>
  
  <p>	  
    <%= f.label :status %><br>
    <%= @schedule.status %>
  </p>
  
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
 