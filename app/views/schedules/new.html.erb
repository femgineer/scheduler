<h1>New Schedule</h1>
<%= form_for :schedule, url: schedules_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
   
  <p>
    <%= f.label :note %><br>
    <%= f.text_area :note %>
  </p>
  
  <p>
  <label for="start_date">Start Date</label>		
  <input type="text" data-behaviour='datepicker' name="start_date" id="start_date">

  <script type="text/javascript">
    $(document).ready(function(){
      $('[data-behaviour~=datepicker]').datepicker();
    })
  </script>  
  </p>
  <p>
  <label for="end_date">End Date</label>		
  <input type="text" data-behaviour='datepicker' name="end_date" id="end_date">

  <script type="text/javascript">
    $(document).ready(function(){
      $('[data-behaviour~=datepicker]').datepicker();
    })
  </script>  
  </p>
  
  <%= f.hidden_field :status, :value => "draft" %>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>
